<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Book"
        android:textSize="40dp"
        android:textColor="#4f9ce4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Number"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/textView_book_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="12sp"/>
    <EditText
        android:id="@+id/editText_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="12sp"/>
    <EditText
        android:id="@+id/editText_Author"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="12sp"/>
    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year Published"
        android:textSize="12sp"/>
    <Spinner
        android:id="@+id/spinner_year_published"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"/>
    <Button
        android:id="@+id/add_book_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Add Book"
        android:textSize="16sp"
        android:textColor="#fff"
        android:background="#4f9ce4"/>


</LinearLayout>