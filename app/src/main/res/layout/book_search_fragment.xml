<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Book"
            android:textSize="40dp"
            android:textColor="#4f9ce4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Book By:"
            android:textSize="12dp"/>
        <Spinner
            android:id="@+id/spinner_search_by"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editText_search_by"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:hint="Book Number"/>
            <Spinner
                android:id="@+id/spinner_search_category"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <Button
            android:id="@+id/book_search_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Search Book"
            android:textSize="16sp"
            android:textColor="#fff"
            android:background="#4f9ce4"
            android:layout_marginBottom="20sp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/listview"/>
    </LinearLayout>

</ScrollView>